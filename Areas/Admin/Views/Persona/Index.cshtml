@model IEnumerable<PersonaViewModel>
@using SYGESTMunicipalSync.Areas.Admin.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

    <div class="<border backgroundWhite">
        <div class="row">
            <div class="col-md-6">
                <h2 class="text-info">Lista de Personas</h2>
            </div>
            <div class="col-6 text-right">
                <p>
                    <a asp-action="Create" class="btn btn-info">
                        <i class="fas fa-plus"></i>
                        &nbsp; Crear Nuevo
                    </a>
                </p>
            </div>
        </div>
        <br />
        <form asp-area="Admin" asp-controller="Persona" asp-action="Index" method="post">
            <div class="row">
                <div class="col-md-2">

                </div>
                <div class="col-md-2 col-lg-2 text-right">
                        <a asp-area="Home" asp-controller="Home" asp-action="Index"
                           class="btn btn-info fa fa-arrow-circle-left"
                           style="width:100%; height:90%;padding:6px;">
                            Regresar al menú
                        </a>
                    </div>
            </div>
            <div class="col-md-12" style="color:black;"><hr /></div>
        </form>

        @if (Model.Count() > 0)
        {
            <table class="table table-hover .table-responsive" id="TbPersonas">
                <thead class="thead-dark">
                    <tr class="table-secondary" style="text-align:center;">
                        <th>@Html.DisplayNameFor(m => m.CedulaPersona)</th>
                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                        <th>@Html.DisplayNameFor(m => m.Email)</th>
                        <th>@Html.DisplayNameFor(m => m.TelMovil)</th>

                        <th>Operaciones</th>
                    </tr>
                </thead>
                <tbody style="text-align:center;">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.CedulaPersona)</td>
                            <td>@Html.DisplayFor(m => item.Nombre)</td>
                            <td>@Html.DisplayFor(m => item.Email)</td>
                            <td>@Html.DisplayFor(m => item.TelMovil)</td>
                            <td>


                                <a class="fa fa-info-circle btn btn-primary" aria-hidden="true"
                                   asp-controller="Persona" asp-action="Details"
                                   asp-route-id="@item.CedulaPersona"></a>

                                <a class="fa fa-pencil btn btn-info" aria-hidden="true"
                                   asp-controller="Persona" asp-action="Edit"
                                   asp-route-id="@item.CedulaPersona"></a>

                                <a class="fa fa-arrow-circle-left btn btn-primary" aria-hidden="true"
                                   asp-controller="Persona" asp-action="Delete"
                                   asp-route-id="@item.CedulaPersona"></a>
                            </td>
                        </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 style="color:red;">No se encontraron personas registradas aún!...</h5>
        }

 </div>


        <script src="~/js/sweetalert2.js"></script>
        <script src="~/js/Utilitarios.js"></script>

        <script>
            $(document).ready(function () {
                $('#TbPersonas').DataTable(
                    {
                        "language": {
                            "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                        }
                    });
            })
        </script>
        }
>
