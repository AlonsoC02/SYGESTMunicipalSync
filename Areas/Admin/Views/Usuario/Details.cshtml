@model SYGESTMunicipalSync.Areas.Admin.Models.Usuario

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaRol;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light" style="text-align:center;background-color:darkslategray;">
            Detalles de Usuario
        </h3>
    </div>
</div>
<div class="container">
    <main class="pb-3" role="main">
        <div class="<border backgroundWhite">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-dark">
                        <img src="~/images/Folder.png" alt="Usuario">

                        
                            <input asp-for="Persona" />
                       

                    </h2>
                </div>
            </div>
            <div class="col-md-12 divisor"><hr></div>
            <form asp-controller="Usuario" asp-action="Details">
                <div class="backgroundWhiteBorder10Padding">
                    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                            <div class="form-group row">
                                <div class="col-md-4 col-lg-4 text-right">
                                    <label>Número de Usuario asignado:</label>
                                </div>
                                <div class="col-md-8 col-lg-8 text-left">
                                    <input asp-for="UsuarioId" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4 col-lg-4 text-right">
                                    <label>Nombre Usuario:</label>
                                </div>
                                <div class="col-md-8 col-lg-8 text-left">
                                    <input asp-for="NombreUsuario" readonly="readonly" class="form-control" />
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-4 col-lg-4 text-right">
                                    <label>Contraseña:</label>
                                </div>
                                <div class="col-md-8 col-lg-8 text-left">
                                    <input asp-for="Password" readonly="readonly" class="form-control" />
                                </div>
                                <span asp-validation-for="Password" class="text-danger"></span>
                            </div>

                            <div class="form-group row">
                                <div class="col-md-4 col-lg-4 text-right">
                                    <label>Tipo de Rol:</label>
                                </div>
                                <div class="col-md-8 col-lg-8 text-left">
                                    <select asp-for="Rol" disabled class="form-control" asp-items="@Lista"></select>
                                </div>
                            </div>
                            <div class="form-group row">
                                <div class="col-md-3 text-md-right">
                                    <a asp-action="Index" type="button" style="color:white"
                                       class="btn btn-success fa fa fa-arrow-circle-left inicio">
                                        Regresar
                                    </a>
                                </div>
                       </div>
                </div>
            </form>
        </div>
    </main>
</div>
