@model SYGESTMunicipalSync.Areas.Admin.Models.Rol

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light" style="text-align:center; background-color:#263182;width:100%;">
            Detalles de Roles de Usuario
        </h3>
    </div>
</div>
<br />

<form asp-controller="RolUsuario" asp-action="Create" method="post" id="viewAgregar">
    <div class="container-fluid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-md-2 text-right">
                <label asp-for="RolId" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="RolId" readonly="readonly" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class=" col-md-2 text-right">
                <label asp-for="Nombre" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Nombre" readonly="readonly" class="form-control" />
            </div>
        </div>


        <div class="form-group row">
            <div class=" col-md-2 text-right">
                <label asp-for="Descripcion" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <textarea asp-for="Descripcion" rows="4" cols="50"
                          class="form-control" disabled> </textarea>
            </div>

        </div>


        <div class="form-group row">
            <div class="col-md-3 text-md-right">
                <a asp-action="Index" type="button" style="color:white"
                   class="btn btn-success fa fa fa-arrow-circle-left inicio">
                    Regresar
                </a>
            </div>
        </div>
    </div>
</form>
