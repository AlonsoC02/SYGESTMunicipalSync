@model SYGESTMunicipalSync.Areas.Admin.Models.Rol

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light" style="text-align:center; background-color:#263182;width:100%;">
            Editar Roles de Usuario
        </h3>
    </div>
</div>
<br />
<form asp-controller="RolUsuario" asp-action="Edit" method="post" id="viewEditar">
    <div class="container-fluid">
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-md-2 text-right">
                <label asp-for="RolId" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="RolId" readonly="readonly" class="form-control" />
            </div>
            <span asp-validation-for="RolId" class="text-danger"></span>
        </div>

        <div class="form-group row">
            <div class=" col-md-2 text-right">
                <label asp-for="Nombre" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="Nombre" class="form-control" placeholder="Digite el nombre del rol" required>
            </div>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>


        <div class="form-group row">
            <div class=" col-md-2 text-right">
                <label asp-for="Descripcion" class="control-label"></label>
            </div>
            <div class="col-md-6">
                <textarea asp-for="Descripcion" rows="4" cols="50"
                          class="form-control" placeholder="Digite la descripción del rol" required> </textarea>
            </div>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group row">

            <div class="col-md-3 text-md-right">
                <a asp-action="Index" type="button" style="color:white"
                   class="btn btn-success fa fa fa-arrow-circle-left inicio">
                    Regresar
                </a>
            </div>
            <div class="col-md-1 text-md-center">
                <input type="button" value="Agregar" id="btnAgregar"
                       class="btn btn-info"
                       onclick="abrirModal()" />
            </div>
        </div>
    </div>
</form>
}

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Modificar Rol', '¿Realmente Desea Editar este Rol?').then((result) => {
            if (result.value) {
                var viewEditar = document.getElementById("viewEditar");
                viewEditar.submit();
                Swal.fire(
                    'El rol fue agregado!',
                    'exitosamente!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'El Rol no ha sido modificado!!!:)',
                    'error'
                )
            }
        })
    }
</script>

