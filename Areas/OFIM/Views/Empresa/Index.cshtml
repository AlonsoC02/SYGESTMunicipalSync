@using SYGESTMunicipalSync.Areas.OFIM.Models
@model IEnumerable<Empresa>
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Registro de Empresas</h2>
                </div>
            </div>
        </div>
        <div class="container">
            <ol>
                <li><a asp-area="OFIM" asp-controller="Home" asp-action="Index">Oficina de la Mujer</a></li>
                <li>Empresa</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="border backgroundWhite">
        <br />
        <form asp-controller="Empresa" asp-action="Index" method="post">
            <div class="row">


                <div class="col-md-2  text-right">
                    <a asp-controller="" asp-action="Index"
                       class="btn btn-warning fa fa-arrow-circle-left"
                       style="width:80%; color:white; height:100%;padding:12px;">
                        Regresar al menú
                    </a>
                </div>

                <div class="col-md-2 text-right">
                    <a asp-action="Create" class="btn btn-info fa fa-plus-circle"
                       style="width:80%; height:100%;padding:12px;">
                        Agregar
                    </a>
                </div>

            </div>
            <div class="col-md-12" style="color:black;"><hr /></div>
        </form>


        @if (Model.Count() > 0)
        {
            <table class="table table-hover .table-responsive" id="TbEmpresa">
                <thead class="thead-dark">
                    <tr class="table-secondary" style="text-align:center;">
                        <th>@Html.DisplayNameFor(m => m.Id)</th>
                        <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                        <th>@Html.DisplayNameFor(m => m.PersonaId)</th>

                        <th>Operaciones</th>
                    </tr>
                </thead>
                <tbody style="text-align:center;">
                    @foreach (var item in Model)
                    {
                    <tr>
                        <td>@Html.DisplayFor(m => item.Id)</td>
                        <td>@Html.DisplayFor(m => item.Nombre)</td>
                        <td>@Html.DisplayFor(m => item.PersonaId)</td>

                        <td style="width:300px">
                            <div class="btn-group" role="group">
                                <a class="btn btn-primary text-white"
                                   asp-controller="Empresa"
                                   asp-action="Edit" asp-route-Id="@item.Id">
                                    <i class="fas fa-edit"></i>
                                </a>
                                <a class="btn btn-success text-white"
                                   asp-controller="Empresa"
                                   asp-action="Details" asp-route-Id="@item.Id">
                                    <i class="fas fa-list-alt"></i>
                                </a>
                                <i class="fa fa-trash btn btn-danger" aria-hidden="true"
                                   onclick="EliminarEmpresa(@item.Id)"></i>

                            </div>
                        </td>

                    </tr>
                    }
                </tbody>
            </table>
        }
        else
        {
            <h5 style="color:red;">No se encontraron registros de empresa!...</h5>
        }
    </div>
</main><!-- End #main -->

<script src="~/js/sweetalert2.js"></script>


<script>
    $(document).ready(function () {
        $('#TbEmpresa').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
    })
</script>


