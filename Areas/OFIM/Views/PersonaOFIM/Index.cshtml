
@model IEnumerable<PerOFIMViewModel>
@using SYGESTMunicipalSync.Areas.OFIM.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

<main id="main">
    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Registro de Persona OFIM</h2>
                </div>
            </div>
        </div>
        <div class="container">
            <ol>
                <li><a asp-area="OFIM" asp-controller="Home" asp-action="Index">Oficina de la Mujer</a></li>
                <li>Persona OFIM</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="border backgroundWhite">
        <br />
        <form asp-controller="PersonaOFIM" asp-action="Index" method="post">
            <div class="row">


                <div class="col-md-2  text-right">
                    <a asp-controller="" asp-action="Index"
                       class="btn btn-warning fa fa-arrow-circle-left"
                       style="width:80%; color:white; height:100%;padding:12px;">
                        Regresar al menú
                    </a>
                </div>

                <div class="col-md-2 text-right">
                    <a asp-action="Create" class="btn btn-info fa fa-plus-circle"
                       style="width:80%; height:100%;padding:12px;">
                        Agregar
                    </a>
                </div>

            </div>
            <div class="col-md-12" style="color:black;"><hr /></div>
        </form>


        @if (Model.Count() > 0)
        {
            <table class="table table-hover .table-responsive" id="TbPersonaOFIM">
                <thead class="thead-dark">
                    <tr class="table-secondary" style="text-align:center;">
                        <th>@Html.DisplayNameFor(m => m.PersonaOFIMId)</th>
                        <th>@Html.DisplayNameFor(m => m.PersonaId)</th>
                        <th>@Html.DisplayNameFor(m => m.Persona)</th>


                        <th>Operaciones</th>
                    </tr>
                </thead>
                <tbody style="text-align:center;">
                    @foreach (var item in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(m => item.PersonaOFIMId)</td>
                            <td>@Html.DisplayFor(m => item.PersonaId)</td>
                            <td>@Html.DisplayFor(m => item.Persona)</td>


                            <td style="width:300px">
                                <div class="btn-group" role="group">
                                    <a class="btn btn-warning text-white"
                                       asp-controller="PersonaOFIM"
                                       asp-action="Edit" asp-route-id="@item.PersonaOFIMId">
                                        <i class="fas fa-edit"></i>
                                    </a>
                                    <a class="btn btn-primary text-white"
                                       asp-controller="PersonaOFIM"
                                       asp-action="Details" asp-route-id="@item.PersonaOFIMId">
                                        <i class="fas fa-list-alt"></i>
                                    </a>

                                    <i class="fa fa-trash-o btn btn-danger" aria-hidden="true"
                                       onclick="EliminarPersonaOFIM(@item.PersonaOFIMId)"></i>
                                </div>
                            </td>

                        </tr>
                    }
                </tbody>
            </table>

            <div class="col-md-15 text-md-right">
                <script>
                    document.write('Ultima modificación: ' + window.document.lastModified)

                </script>
            </div>

        }
        else
        {
            <h5 style="color:red;">No se encontraron registros de persona OFIM!...</h5>
        }
    </div>

    <form asp-action="Delete" asp-controller="PersonaOFIM" method="post" id="viewEliminar">
        <input type="hidden" id="txtPersonaOFIMId" name="PersonaOFIMId" />

    </form>
    <form asp-action="Edit" asp-controller="PersonaOFIM" method="post" id="viewEditar">
        <input type="hidden" id="txtPersonaOFIMId" name="PersonaOFIMId" />
    </form>
</main><!-- End #main -->

<script src="~/js/sweetalert2.js"></script>


<script>
    $(document).ready(function () {
        $('#TbPersonaOFIM').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
    })

    function EliminarPersonaOFIM(PersonaOFIMId) {
        document.getElementById("txtPersonaOFIMId").value = PersonaOFIMId;
        verModal('Eliminar Persona OFIM',
            '¿Desea eliminar esta Persona OFIM '
            + PersonaOFIMId + ' ?').then((result) => {
                if (result.value) {
                    alert("No puede eliminar la Persona OFIM si están siendo utilizado por una consulta")
                    var viewEliminar = document.getElementById("viewEliminar");
                    viewEliminar.submit();
                    Swal.fire(
                        'Eliminación!',
                        'La Persona OFIM  ' + PersonaOFIMId + ' fue eliminada!.',
                        'success'
                    )
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelado',
                        'La Persona OFIM no fue eliminada!!!:)',
                        'error'
                    )
                }
            })
    }
</script>





