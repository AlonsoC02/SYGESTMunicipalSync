@model SYGESTMunicipalSync.Areas.OFIM.Models.ViewModel.ProductoServicioViewModel
@using SYGESTMunicipalSync.Extensions
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}



<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#dc3545;">
            Detalles de las Producto/Servicio
        </h3>
    </div>
</div>
<br />

<form asp-action="Details" asp-controller="ProductoServicio" method="post" enctype="multipart/form-data">
    <div class="container-fluid">
        <input type="hidden" asp-for="ProductoServicio.Id" />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductoServicio.Nombre" class="col-form-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="ProductoServicio.Nombre" readonly="readonly" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductoServicio.Descripcion" class="col-form-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="ProductoServicio.Descripcion" class="form-control" readonly="readonly" />
            </div>
        </div>


        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductoServicio.Imagen" class="col-form-label"></label>
            </div>
            <div class="col-md-6">
                @{
                    var base64 = Convert.ToBase64String(Model.ProductoServicio.Imagen);
                    var imgsrc = string.Format("data:image/jpg;base64,{0}", base64);
                }
                <img src="@imgsrc" style="width:50%; border-radius:5px;border: 1px solid #bbb9b9;" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductoServicio.CatProductoServicioId" class="col-form-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="ProductoServicio.CatProductoServicio.Nombre" readonly="readonly" class="form-control" />
            </div>
        </div>
        <div class="form-group row">
            <div class="col-md-2">
                <label asp-for="ProductoServicio.EmpresaId" name="LblEmpresaId" class="col-form-label"></label>
            </div>
            <div class="col-md-6">
                <input asp-for="ProductoServicio.Empresa.Nombre" readonly="readonly" class="form-control" />
            </div>
        </div>

        <div class="form-group row">
            <div class="col-md-5 text-center">
                <a asp-action="Index" type="button"
                   class="btn btn-success">Regresar </a>
            </div>
        </div>

    </div>
</form>
