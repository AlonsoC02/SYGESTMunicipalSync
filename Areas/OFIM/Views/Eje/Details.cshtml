@model SYGESTMunicipalSync.Areas.OFIM.Models.ViewModel.EjeAndCategoriaViewModel
@using SYGESTMunicipal.Extensions

@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}


    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:#dc3545;">
                Detalles de los Ejes
            </h3>
        </div>
    </div>
    <br />

    <form asp-action="Details" asp-controller="Eje">
        <div class="border backgroundWhite">
            <input type="hidden" asp-for="Eje.CategoriaId" />

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Eje.Id" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Eje.Id" readonly class="form-control" />
                </div>
                <span asp-validation-for="Eje.Id" class="text-danger"></span>

            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Eje.Categoria.Nombre" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <select manifest="ddlCategory" asp-for="Eje.CategoriaId" disabled
                            asp-items="Model.CategoriaList.ToSelectListItem(Model.Eje.CategoriaId)"
                            class="form-control"></select>
                </div>
            </div>

            <div class="form-group row">
                <div class="col-md-2">
                    <label asp-for="Eje.Nombre" class="col-form-label"></label>
                </div>
                <div class="col-md-6">
                    <input asp-for="Eje.Nombre" readonly class="form-control" />
                </div>
                <span asp-validation-for="Eje.Nombre" class="text-danger"></span>
            </div>

            <div class="form-group row">

                <div class="col-md-1 text-md-center">
                    <a asp-action="Index" type="button"
                       class="btn btn-success">Regresar </a>
                </div>
            </div>

        </div>
    </form>


