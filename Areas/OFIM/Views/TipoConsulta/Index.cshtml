

@model IEnumerable<TipoConsultaViewModel>
@using SYGESTMunicipalSync.Areas.OFIM.Models.ViewModel
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
            Registro de Tipo de Consulta
        </h3>
    </div>
</div>
<br />
<br />
<div class="container">
    <!--Cambio aca-->
    <main class="pb-3" role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-dark">Lista de Tipo de Consulta</h2>
                </div>
            </div>
            <br />
            <form asp-controller="TipoConsulta" asp-action="Index" method="post">
                <div class="col-md-12" style="color:black;"><hr /></div>
            </form>
            <div class="row contenedorBotones">
                <div class="col-md-6 text-md-left">
                    <a asp-controller="" asp-action="Index" class="btn btn-success fa fa fa-arrow-circle-left inicio">
                        Regresar al menú
                    </a>
                </div>

                <div class="col-md-6 text-md-right">
                    <a asp-action="Create" class="btn btn-info">
                        <i class="fas fa-plus"></i>
                        &nbsp; Crear Nuevo
                    </a>
                </div>
            </div>
            <div class="col-md-12 divisor"><hr></div>

            @if (Model.Count() > 0)
            {
                <table class="table table-hover border .table-responsive" id="TbTipoConsulta">
                    <thead class="thead-dark">
                        <tr class="table-secondary" style="text-align:center;">
                            <th>@Html.DisplayNameFor(m => m.TipoConsultaId)</th>
                            <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                            <th>@Html.DisplayNameFor(m => m.PersonaId)</th>

                            <th>Operaciones</th>
                        </tr>
                    </thead>
                    <tbody style="text-align:center;">
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@Html.DisplayFor(m => item.TipoConsultaId)</td>
                                <td>@Html.DisplayFor(m => item.Nombre)</td>
                                <td>@Html.DisplayFor(m => item.Persona)</td>

                                <td style="width:300px">
                                    <div class="btn-group" role="group">
                                        <a class="btn btn-warning text-white"
                                           asp-controller="TipoConsulta"
                                           asp-action="Edit" asp-route-id="@item.TipoConsultaId">
                                            <i class="fas fa-edit"></i>
                                        </a>
                                        <a class="btn btn-primary text-white"
                                           asp-controller="tipoConsulta"
                                           asp-action="Details" asp-route-id="@item.TipoConsultaId">
                                            <i class="fas fa-list-alt"></i>
                                        </a>

                                        <i class="fa fa-trash-o btn btn-danger" aria-hidden="true"
                                           onclick="EliminarTipoConsulta(@item.TipoConsultaId)"></i>

                                    </div>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
                <div class="col-md-15 text-md-right">
                    <script>
                        document.write('Ultima modificación: ' + window.document.lastModified)

                    </script>
                </div>
            }
            else
            {
                <h5 style="color:red;">No se encontraron registros de tipos de consulta!...</h5>
            }
        </div>
        <form asp-action="Delete" asp-controller="TipoConsulta" method="post" id="viewEliminar">
            <input type="hidden" id="txtTipoConsultaId" name="TipoConsultaId" />
        </form>
        <form asp-action="Edit" asp-controller="TipoConsulta" method="post" id="viewEditar">
            <input type="hidden" id="txtTipoConsultaId" name="TipoConsultaId" />
        </form>
    </main>
</div>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>

<script>
    $(document).ready(function () {
        $('#TbTipoConsulta').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
    })

    function EliminarTipoConsulta(TipoConsultaId) {
        document.getElementById("txtTipoConsultaId").value = TipoConsultaId;
        verModal('Eliminar tipo de consulta',
            '¿Desea Eliminar este tipo de consulta '
            + TipoConsultaId + ' ?').then((result) => {
                if (result.value) {
                    alert("No puede eliminar este tipo de consulta si está siendo utilizado por otra consulta")
                    var viewEliminar = document.getElementById("viewEliminar");
                    viewEliminar.submit();
                    Swal.fire(
                        'Eliminación!',
                        'El tipo de consulta  ' + TipoConsultaId + ' fue eliminado!.',
                        'success'
                    )
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelado',
                        'El tipo de consulta no fue eliminada!!!:)',
                        'error'
                    )
                }
            })
    }
</script>