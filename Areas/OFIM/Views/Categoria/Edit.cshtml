@model SYGESTMunicipalSync.Areas.OFIM.Models.Categoria
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOFIM.cshtml";

}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Editar Registro</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFIM" asp-controller="Categoria" asp-action="Edit">Proceso formativo</a></li>
                <li>Editar Registro</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Editar
            </h3>
        </div>
    </div>
    <br />

    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Edit" id="viewEditar">
                    <div class="backgroundWhite">
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="CategoriaId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="CategoriaId" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="CategoriaId" class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Nombre" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Nombre" class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class=" text-danger"></span>
                        </div>

                        @*<div class="form-group row">
                                <div class="col-md-2">
                                    <h5><label asp-for="Fecha" class="col-form-label"></label></h5>
                                </div>
                                <div class="col-md-8">
                                    <input asp-for="Fecha" type="text" id="datepicker" class="form-control" />
                                </div>
                            </div>*@
                        <div class="form-group row">
                            <div class="col-md-4 text-md-right">
                                <a asp-action="Index" type="button" style="color:white"
                                   class="btn btn-warning">
                                    Regresar
                                </a>
                            </div>

                            <div class="col-md-4 text-md-right">
                                <input type="button" value="Editar" id="btnEditar"
                                       class="btn btn-info" @*style="width: 80%;"*@
                                       onclick="abrirModal()" />
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>
@section Scripts{







    <script src="~/js/sweetalert2.js"></script>
    <script src="~/js/Utilitarios.js"></script>
    <script>
        function abrirModal() {
            verModal('Modificar', '¿Realmente Desea modificar el registro de proceso formativo?').then((result) => {
                if (result.value) {
                    var viewEditar = document.getElementById("viewEditar");
                    viewEditar.submit();
                    Swal.fire(
                        'Modificado!',
                        'Operación con éxito!.',
                        'success'
                    )
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelado',
                        'Operación Fracasada!!!:)',
                        'error'
                    )
                }
            })
        }
    </script>
}