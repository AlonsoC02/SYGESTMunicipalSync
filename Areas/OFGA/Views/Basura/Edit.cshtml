@model SYGESTMunicipalSync.Areas.OFGA.Models.Basura
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
    String Fecha = @ViewBag.Fecha;
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
            Editar Registro
        </h3>
    </div>
</div>
<!-- ======= About Section ======= -->
<div class="row no-gutters">
    <div class="col-md-7">
        <div class="contact-wrap w-100 p-md-5 p-4">
            <form method="post" asp-action="Edit" id="viewEditar">
                <div class="backgroundWhite">
                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="BasuraId" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="BasuraId" class="form-control" readonly />
                        </div>
                        <span asp-validation-for="BasuraId" class=" text-danger"></span>
                    </div>

                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="Peso" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="Peso" class="form-control" />
                        </div>
                        <span asp-validation-for="Peso" class=" text-danger"></span>
                    </div>

                    <div class="form-group row">
                        <div class="col-md-2">
                            <h5><label asp-for="Fecha" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-8">
                            <input asp-for="Fecha" type="text" class="form-control" id="datepicker" />
                        </div>
                    </div>
                    <div class="form-group row">

                        <div class="col-md-4 text-md-right">
                            <a asp-action="Index" type="button"
                               class="btn btn-success fa fa fa-arrow-circle-left inicio">
                                Regresar
                            </a>
                        </div>
                        <div class="col-md-1 text-md-center">
                            <input type="button" value="Editar" id="btnEditar"
                                   class="btn btn-info"
                                   onclick="abrirModal()" />
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts{
    <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery-timepicker/1.10.0/jquery.timepicker.js"></script>
    <script src="https://www.jonthornton.com/jquery-timepicker/jquery.timepicker.js"></script>
    <script src="https://www.jonthornton.com/jquery-timepicker/jquery.timepicker.css"></script>
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/2.1.1/jquery.min.js"></script>

    <script src="~/js/jquery.datepair.js"></script>
    <script src="~/js/jquery.datepair.min.js"></script>
    <script src="~/js/moment.min.js"></script>
    <script src="~/js/jquery.timepicker.js"></script>
    <script src="~/js/jquery.timepicker.min.js"></script>

    <script src="~/js/jquery-ui.js"></script>
    <script src="~/js/jquery-ui.min.js"></script>

    <script>
        $(function () {
            $("#datepicker").datepicker({ dateFormat: 'dd-mm-yy' }).val();
            $("#datepicker").datepicker({ minDate: 0, maxDate: "+1W" });
            //$("#timepicker").timepicker({ minTime: '11:00 AM', maxTime: '9:00 PM', step: '30' })
        });</script>
}

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Modificar', '¿Realmente Desea modificar el registro de residuos ordinarios?').then((result) => {
            if (result.value) {
                var viewEditar = document.getElementById("viewEditar");
                viewEditar.submit();
                Swal.fire(
                    'Modificado!',
                    'Operación con éxito!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'Operación Fracasada!!!:)',
                    'error'
                )
            }
        })
    }
</script>
