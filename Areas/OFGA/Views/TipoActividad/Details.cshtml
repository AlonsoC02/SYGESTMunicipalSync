
@model SYGESTMunicipalSync.Areas.OFGA.Models.TipoActividad
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
   
}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Mostrar Registro</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="TipoActividad" asp-action="Details">Tipo de Actividad</a></li>
                <li>Mostrar Registro</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Listar
            </h3>
        </div>
    </div>
    <br />

    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Edit" id="viewEditar">
                    <div class="backgroundWhite">
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="TipoActividadId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="TipoActividadId" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="TipoActividadId" readonly class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Nombre" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Nombre" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="Nombre" class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Descripcion" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Descripcion" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="Descripcion" class=" text-danger"></span>
                        </div>
                        <div class="form-group row">

                            <div class="col-md-4 text-md-right">
                                <a asp-action="Index" type="button" style="color:white"
                                   class="btn btn-warning">
                                    Regresar
                                </a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Modificar', '¿Realmente Desea modificar el registro de Tipos de Actividad?').then((result) => {
            if (result.value) {
                var viewEditar = document.getElementById("viewEditar");
                viewEditar.submit();
                Swal.fire(
                    'Modificado!',
                    'Operación con éxito!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'Operación Fracasada!!!:)',
                    'error'
                )
            }
        })
    }
</script>
