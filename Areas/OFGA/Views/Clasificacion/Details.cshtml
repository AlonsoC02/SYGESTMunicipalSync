@model SYGESTMunicipalSync.Areas.OFGA.Models.Clasificacion
@{
    ViewData["Title"] = "Details";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
            Detalles del Tipo de Material
        </h3>
    </div>
</div>

<div class="container contenedorPrincipal">
    <main class="pb-3" role="main">
        <div class="row">
            <form asp-action="Details" method="post" id="viewDetailsClasificacion">
                <div class="container-fluid">
                    <fieldset>
                        <legend class="text-center header">Detalles de la Categoria de los materiales</legend>
                        <br />
                        <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="ClasificacionId" class="col-form-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="ClasificacionId" readonly="readonly" class="form-control" />
                            </div>
                            <span asp-validation-for="ClasificacionId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Nombre" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <input asp-for="Nombre" readonly="readonly" class="form-control" placeholder="Nombre" />
                            </div>
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group row">
                            <div class="col-md-3 text-align-right">
                                <label asp-for="Descripcion" class="control-label"></label>
                            </div>
                            <div class="col-md-6">
                                <textarea asp-for="Descripcion" readonly="readonly" row="4" cols="50" class="form-control" placeholder="Descripcion"></textarea>
                            </div>
                            <span asp-validation-for="Descripcion" class="text-danger"></span>
                        </div>
                    </fieldset>
                    <div class="form-group row">
                        <div class="col-md-6 text-md-right">
                            <a asp-action="Index" type="button"
                               class="btn btn-success fa fa fa-arrow-circle-left inicio">
                                Regresar
                            </a>
                        </div>
                    </div>
                </div>
            </form>
        </div>
    </main>
</div>
