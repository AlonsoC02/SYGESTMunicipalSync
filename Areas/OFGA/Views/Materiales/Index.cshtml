@model IEnumerable<MaterialesClasificacionViewModel>
@using SYGESTMunicipalSync.Areas.OFGA.Models.ViewModels
@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
<head>
    <title>Materiales</title>
</head>
<partial name="_Menu" />
<div class="container">
    <main class="pb-3" role="main">
        <div class="container-fluid">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-light">Lista Medico</h2>
                </div>
            </div>
            <form asp-controller="Materiales" asp-action="Index" method="post" id="frmFilter">
                <div class="row contenedorBotones">
                    <div class="col-md-2 col-lg-2 text-right">
                        <a asp-action="Create" class="btn btn-success fa fa-plus-circle crear">
                            Nuevo
                        </a>
                    </div>
                    <div class="col-md-2 colo-lg-2 text-right">
                        <a asp-controller="Home" asp-action="Index" class="btn btn-info fa fa fa-arrow-circle-left inicio">
                            Regresar al menú
                        </a>
                    </div>
                </div>
                <div class="col-md-12" style="color:black;"><hr></div>
            </form>
            @if (Model.Count() > 0)
            {
                <div class="contenedorTablas">
                    <table class="table table-hover border .table-responsive" id="TbEspecial">
                        <thead class="thead-dark">
                            <tr class="table-secondary trs">
                                <th>@Html.DisplayNameFor(m => m.MaterialId)</th>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Clasificacion)</th>
                                @*<th>@Html.DisplayNameFor(m => m.Direccion)</th>
                                <th>@Html.DisplayNameFor(m => m.TelefonoFijo)</th>
                                <th>@Html.DisplayNameFor(m => m.TelefonoCelular)</th>
                                <th>@Html.DisplayNameFor(m => m.Especialidad)</th>*@
                                <th></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.MaterialId)</td>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Clasificacion)</td>
                                    @*<td>@Html.DisplayFor(m => item.Direccion)</td>
                                    <td>@Html.DisplayFor(m => item.TelefonoFijo)</td>
                                    <td>@Html.DisplayFor(m => item.TelefonoCelular)</td>
                                    <td>@Html.DisplayFor(m => item.Especialidad)</td>*@
                                    <partial name="_AddEditAndView" model="item.MaterialId" />
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <h2 style="color:red">No se encontraron registros.</h2>
            }
        </div>
        <form asp-action="Delete" asp-controller="Medico" method="post" id="viewEliminarMedico">
            <input type="hidden" id="txtMedicoId" name="MedicoId" />
        </form>
        <form asp-action="Edit" asp-controller="Medico" method="post" id="viewEditarMedico">
            <input type="hidden" id="txtMedicoId" name="MedicoId" />
        </form>
    </main>
</div>
@*<partial name="_EndPag" />*@