@model IEnumerable<SYGESTMunicipalSync.Areas.OFGA.Models.Charlas>

@{
    ViewData["Title"] = "Index";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
            Registro de Charlas
        </h3>
    </div>
</div>

<div class="container">
    <main class="pb-3" role="main">
        <div class="<border backgroundWhite">
            <div class="row">
                <div class="col-md-6 col-lg-12">
                    <h2 class="text-dark">Lista de Charlas</h2>
                </div>
            </div>
            @*@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFGA))
                {*@
            <form asp-controller="Charlas" asp-action="Index" method="post">
                <div class="col-md-12" style="color:black;"><hr /></div>
            </form>
            <div class="row contenedorBotones">
                <div class="col-md-6 text-md-left">
                    <a asp-controller="" asp-action="Index"
                       class="btn btn-danger fa fa fa-arrow-circle-left inicio">
                        Regresar al menú
                    </a>
                </div>

                <div class="col-md-6 text-md-right">
                    <a asp-action="Create" class="btn btn-info">
                        <i class="fas fa-plus"></i>
                        &nbsp; Crear Nuevo
                    </a>
                </div>
            </div>
            <div class="col-md-12 divisor"><hr></div>
            @*}*@
            @*//Vista del filtro*@
            @*<div class="row">
                    <div class="col-12 text-right">
                        <partial name="_Filter" />
                    </div>
                </div>*@
            <div>


                @if (Model.Count() > 0)
                {

                    <table class="table table-hover .table-responsive" id="TbCharlas">
                        <thead class="thead-dark">
                            <tr class="table-secondary" style="text-align:center;">
                                <th>@Html.DisplayNameFor(m => m.CharlaId)</th>
                                <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                <th>@Html.DisplayNameFor(m => m.Fecha)</th>
                                <th>@Html.DisplayNameFor(m => m.Activa)</th>

                                <th>Operaciones</th>

                            </tr>
                        </thead>
                        <tbody style="text-align:center;">
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <td>@Html.DisplayFor(m => item.CharlaId)</td>
                                    <td>@Html.DisplayFor(m => item.Nombre)</td>
                                    <td>@Html.DisplayFor(m => item.Fecha)</td>
                                    <td>
                                        @Html.DisplayFor(m => item.Activa)
                                    </td>
                                    @*@if (User.IsInRole(SD.ManagerUser) || User.IsInRole(SD.AdminOFGA))
                                        {*@
                                    <td style="width:300px">
                                        <div class="btn-group" role="group">
                                            <a class="btn btn-primary text-white"
                                               asp-controller="Charlas"
                                               asp-action="Edit" asp-route-id="@item.CharlaId">
                                                <i class="fas fa-edit"></i>
                                            </a>
                                            <a class="btn btn-success text-white"
                                               asp-controller="Charlas"
                                               asp-action="Details" asp-route-id="@item.CharlaId">
                                                <i class="fas fa-list-alt"></i>
                                            </a>

                                            <i class="fa fa-trash-o btn btn-danger" aria-hidden="true"
                                               onclick="EliminarCharlas(@item.CharlaId)"></i>

                                        </div>
                                    </td>
                                    @*}*@
                                </tr>
                            }
                        </tbody>
                    </table>
                }
                else
                {
                    <h3 style="color:red;">No existen charlas registradas!...</h3>
                }
            </div>
        </div>
        <form asp-action="Delete" asp-controller="Charlas" method="post" id="viewEliminar">
            <input type="hidden" id="txtCharlaId" name="CharlaId" />

        </form>
        <form asp-action="Edit" asp-controller="Charlas" method="post" id="viewEditar">
            <input type="hidden" id="txtCharlaId" name="CharlaId" />
        </form>
    </main>
</div>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>

<script>
    $(document).ready(function () {
        $('#TbCharlas').DataTable(
            {
                "language": {
                    "url": "//cdn.datatables.net/plug-ins/1.10.15/i18n/Spanish.json"
                }
            });
    })

    function EliminarCharlas(CharlaId) {
        document.getElementById("txtCharlaId").value = CharlaId;
        verModal('Eliminar Charla',
            '¿Desea eliminar la charla '
            + CharlaId + ' ?').then((result) => {
                if (result.value) {
                    alert("No puede eliminar la charla si esta está siendo utilizado por otra actividad")
                    var viewEliminar = document.getElementById("viewEliminar");
                    viewEliminar.submit();
                    Swal.fire(
                        'Eliminación!',
                        'La Charla  ' + CharlaId + ' fue eliminado!.',
                        'success'
                    )
                }
                else if (result.dismiss === Swal.DismissReason.cancel) {
                    Swal.fire(
                        'Cancelado',
                        'La Charla no fue eliminada!!!:)',
                        'error'
                    )
                }
            })
    }
</script>
