
@model IEnumerable<SYGESTMunicipalSync.Areas.OFGA.Models.Charlas>


@{
    ViewData["Title"] = "IndexTalks";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
}
@foreach (var item in Model)
{
    <ul class="ftco-section" style="text-align:center;background-color:darkslategray;">
        <div class="container">
            <h2 class="text-light">
                Charla Disponible
            </h2>
            <div class="row">
                <div class="col-lg-6 video-box align-self-baseline">
                    <br />
                    @{
                        var base64 = Convert.ToBase64String(item.Imagen);
                        var imgsrc = string.Format("data:image/jpg;base64, {0}", base64);
                    }
                    <img src="@imgsrc" style="height: 100%; width:110%" />
                </div>
                <div class="col-lg-6 pt-3 pt-lg-0 content">
                    <br />
                    <ul>
                        <div class="form-group row col-lg-12 text-left">
                            <h4>
                                <div class="col-md text-right" style="color:#95D93C;text-shadow: 3px 3px 6px #000">

                                    <th>@Html.DisplayNameFor(m => m.Nombre)</th>
                                </div>
                            </h4>
                            <div class="col-md" style="color:darkgray;text-shadow: 3px 3px 6px #000">
                                <h4 style="color:white">@Html.DisplayFor(m => item.Nombre)</h4>
                            </div>
                        </div>
                        <div class="form-group row col-lg-12 text-left">
                            <h4>
                                <div class="col-md text-right" style="color:#95D93C;text-shadow: 3px 3px 6px #000">

                                    <th>@Html.DisplayNameFor(m => m.Descripcion)</th>
                                </div>
                            </h4>
                            <div class="col-md" style="color:darkgray;text-shadow: 3px 3px 6px #000">
                                <h4 style="color:white">@Html.DisplayFor(m => item.Descripcion)</h4>
                            </div>
                        </div>
                        <div class="form-group row col-lg-12 text-left">
                            <h4>
                                <div class="col-md text-right" style="color:#95D93C;text-shadow: 3px 3px 6px #000">

                                    <th>@Html.DisplayNameFor(m => m.Fecha)</th>
                                </div>
                            </h4>
                            <div class="col-md" style="color:darkgray;text-shadow: 3px 3px 6px #000">
                                <h4 style="color:white">@Html.DisplayFor(m => item.Fecha)</h4>
                            </div>
                        </div>

                        <div class="form-group row col-lg-12 text-left">
                            <h4>
                                <div class="col-md text-right" style="color:#95D93C;text-shadow: 3px 3px 6px #000">

                                    <th>@Html.DisplayNameFor(m => m.Lugar)</th>
                                </div>
                            </h4>

                            <div class="col-md" style="color:#95D93C;text-shadow: 3px 3px 6px #000">
                                <h4 style="color:white">@Html.DisplayFor(m => item.Lugar)</h4>
                            </div>

                        </div>
                        <div class="form-group row col-lg-12 text-left">
                            <h4>
                                <div class="col-md text-right" style="color:#95D93C;text-shadow: 3px 3px 6px #000">

                                    <th>@Html.DisplayNameFor(m => m.Expositor)</th>
                                </div>
                            </h4>
                            <div class="col-md" style="color:darkgray;text-shadow: 3px 3px 6px #000">
                                <h4 style="color:white">@Html.DisplayFor(m => item.Expositor)</h4>
                            </div>
                        </div>
                        <div class="form-group row">
                            <div class="col-lg-11 text-right">
                                <a asp-controller="" asp-action="Index" type="button"
                                   class="btn btn-outline-success btn-lg fa fa fa-arrow-circle-left inicio">
                                    Regresar
                                </a>
                            </div>
                        </div>
                    </ul>
                </div>
            </div>
        </div>
    </ul>
 }
<br />
<!-- ======= Portfolio Details Section ======= -->
<section id="portfolio-details" class="portfolio-details">
    <div class="container text-center">
        <div class="section-title" data-aos="fade-up">
            <h2>Charlas Ofrecidas</h2>
            <h4>Tomamos muy en serio la educación ambiental, por lo que nuestro compromiso es ofrecer el conocimiento necesario para que la comunidad sea parte del desarollo sostenible y equilibrado con nuestro medio ambiente.</h4>
        </div>
        <div class="container" style="text-align: center; width: 80%;">

            <div class="owl-carousel portfolio-details-carousel">
                <img src="https://i.pinimg.com/originals/f5/5f/51/f55f5105cc2ebf0c4bb0a78d1bdc7644.jpg" class="img-fluid" alt="">
                <img src="https://i.pinimg.com/originals/18/15/0f/18150f5f76d50bd6dc037f6e2137a042.jpg" class="img-fluid" alt="">
            </div>
        </div>
        <div class="portfolio-description text-left">
            <h2>Trabajo</h2>
            <h5>
                Impartir charlas y capacitaciones para la educación ambiental, promoveer el reciclaje a través de campañas, vigilar porque el catón tenga un ambiente libre de basura,
                por medio de la recolección de la misma, esfuerzos conjuntos para mejorar el tratamiento de las aguas residuales, entre otros.
            </h5>
        </div>
    </div>
</section><!-- End Portfolio Details Section -->

@section Scripts{
    <script src="https://code.jquery.com/jquery-3.5.0.js"
            integrity="sha256-r/AaFHrszJtwpe+tHyNi/XCfMxYpbsRg2Uqn0x3s2zc="
            crossorigin="anonymous">
    </script>
    <script>
        //load data from server, using HTTP Post request
        var posts = $('.post');
        (function ($) {
            $("#menu-filters li").click(function () {
                $("#menu-filters li").removeClass('active btn btn-secondary');
                $(this).addClass('active btn btn-secondary');
                var selectedFilter = $(this).data("filter");
                $(".menu-restaurant").fadeOut();
                setTimeout(function () {
                    $(selectedFilter).slideDown();
                }, 100);
            });
        })(jQuery);
    </script>
}

