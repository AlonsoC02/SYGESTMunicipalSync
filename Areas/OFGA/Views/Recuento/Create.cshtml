@model SYGESTMunicipalSync.Areas.OFGA.Models.Recuento
@using SYGESTMunicipalSync.Areas.OFGA.Models.ViewModels
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaMateriales;
    List<SelectListItem> Lista1 = ViewBag.ListaClasificacion;


}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
            Crear Recuento
        </h3>
    </div>
</div>

<!-- ======= About Section ======= -->
<div class="row no-gutters">
    <div class="col-md-7">
        <div class="contact-wrap w-100 p-md-5 p-4">
            <h2 class="text-info">Nuevo Registro</h2>
            <br>
            <form method="post" asp-action="Create" id="viewAgregar">
                <div class="backgroundWhite">
                    <div asp-validation.summary="ModelOnly" class="text-danger"></div>
                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="PesoGlobal" class="col-form-label">Peso Kg/Ton Global:</label></h5>
                        </div>
                        <div class="col-md-9">
                            <input asp-for="PesoGlobal" class="form-control" />
                        </div>
                        <span asp-validation-for="PesoGlobal" class=" text-danger"></span>
                    </div>

                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="FechaPeso" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-8">
                            <input type="date" asp-for="FechaPeso" class="form-control" />
                        </div>
                        <span asp-validation-for="FechaPeso" class=" text-danger"></span>
                    </div>

                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="MaterialId" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="MaterialId" class="form-control" required
                                    asp-items="@Lista"></select>
                        </div>
                        <span asp-validation-for="MaterialId" class=" text-danger"></span>
                    </div>

                    <div class=" form-group row">
                        <div class=" col-md-2">
                            <h5><label asp-for="ClasificacionId" class="col-form-label"></label></h5>
                        </div>
                        <div class="col-md-8">
                            <select asp-for="ClasificacionId" class="form-control" required
                                    asp-items="@Lista1"></select>
                        </div>
                        <span asp-validation-for="ClasificacionId" class=" text-danger"></span>
                    </div>


                    <div class="form-group row">

                        <div class="col-md-4 text-md-right">
                            <a asp-action="Index" type="button" style="color:white"
                               class="btn btn-danger fa fa fa-arrow-circle-left inicio">
                                Regresar
                            </a>


                        </div>

                        <div class="col-md-4 text-md-right">
                            <input type="button" value="Agregar" id="btnAgregar"
                                   class="btn btn-info"
                                   onclick="abrirModal()" />
                        </div>

                    </div>

                </div>
            </form>
        </div>
    </div>
</div>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Agregar Pacas', '¿Realmente desea agregar este registro de recuento?').then((result) => {
            if (result.value) {
                var viewAgregar = document.getElementById("viewAgregar");
                viewAgregar.submit();
                Swal.fire(
                    'El registro de recuento fue agregado!',
                    'exitosamente!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'El registro de recuento no ha sido agregado!!!:)',
                    'error'
                )
            }
        })
    }
</script>
