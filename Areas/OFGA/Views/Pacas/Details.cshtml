
@model SYGESTMunicipalSync.Areas.OFGA.Models.Pacas
@{
    ViewData["Title"] = "Edit";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";

    List<SelectListItem> Lista = ViewBag.ListaMateriales;
    List<SelectListItem> Lista1 = ViewBag.ListaClasificacion;

}

<div class="row">
    <div class="col-md-12 col-lg-12">
        <h3 class="text-light"
            style="text-align:center;background-color:#263182;">
           Mostrar Registro
        </h3>
    </div>
</div>
    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Details" id="viewMostrar">
                    <div class="backgroundWhite">
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="PacaId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PacaId" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="PacaId" class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Peso" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Peso" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="Peso" class=" text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Fecha" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="Fecha" type="text" id="datepicker" readonly class="form-control" />
                            </div>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="MaterialId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">  
                                <select asp-for="MaterialId" class="form-control" 
                                        asp-items="@Lista" disabled ></select>
                            </div>
                            <span asp-validation-for="MaterialId" class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="ClasificacionId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <select asp-for="ClasificacionId" class="form-control" 
                                        asp-items="@Lista1" disabled></select>
                            </div>
                            <span asp-validation-for="ClasificacionId" class=" text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-4 text-md-right">
                                <a asp-action="Index" type="button" style="color:white"
                                   class="btn btn-danger fa fa fa-arrow-circle-left inicio">
                                    Regresar
                                </a>
                            </div>
                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    
</script>
