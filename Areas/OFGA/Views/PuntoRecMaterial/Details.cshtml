@model SYGESTMunicipalSync.Areas.OFGA.Models.PuntoRecMaterial
@{
    ViewData["Title"] = "Create";
    Layout = "~/Views/Shared/_LayoutOFGA.cshtml";
    List<SelectListItem> Lista = ViewBag.ListaTMaterial;
    List<SelectListItem> Lista1 = ViewBag.ListaTClasificacion;
    List<SelectListItem> Lista2 = ViewBag.ListaTDistrito;

}

<main id="main">

    <!-- ======= Breadcrumbs ======= -->
    <section id="breadcrumbs" class="breadcrumbs">
        <div class="breadcrumb-hero">
            <div class="container">
                <div class="breadcrumb-hero">
                    <h2>Mostrar Registro</h2>
                </div>
            </div>
        </div>

        <div class="container">
            <ol>
                <li><a asp-area="OFGA" asp-controller="PuntoRecMaterial" asp-action="Details">Punto de Recuperación material</a></li>
                <li>Mostrar Registro</li>
            </ol>
        </div>
    </section><!-- End Breadcrumbs -->

    <div class="row">
        <div class="col-md-12 col-lg-12">
            <h3 class="text-light"
                style="text-align:center;background-color:darkslategray;">
                Listar
            </h3>
        </div>
    </div>
    <br />

    <!-- ======= About Section ======= -->
    <div class="row no-gutters">
        <div class="col-md-7">
            <div class="contact-wrap w-100 p-md-5 p-4">
                <form method="post" asp-action="Edit" id="viewEditar">
                    <div class="backgroundWhite">
                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="PuntosRecMaterialId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="PuntosRecMaterialId" class="form-control" readonly />
                            </div>
                            <span asp-validation-for="PuntosRecMaterialId" readonly class=" text-danger"></span>
                        </div>

                        <div class=" form-group row">
                            <div class=" col-md-2">
                                <h5><label asp-for="Peso" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-9">
                                <input asp-for="Peso" readonly class="form-control" />
                            </div>
                            <span asp-validation-for="Peso" class=" text-danger"></span>
                        </div>

                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="Fecha" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <input asp-for="Fecha" type="text" id="datepicker" readonly class="form-control" />
                            </div>
                        </div>

                        @*Material*@
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="MaterialId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <select asp-for="MaterialId" class="form-control"
                                        asp-items="@Lista" disabled></select>
                            </div>
                            <span asp-validation-for="MaterialId" class="text-danger"></span>
                        </div>
                        @*Clasificacion*@
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="DistritoId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <select asp-for="DistritoId" class="form-control"
                                        asp-items="@Lista2" disabled></select>
                            </div>
                            <span asp-validation-for="DistritoId" class="text-danger"></span>
                        </div>
                        @*Material Type*@
                        <div class="form-group row">
                            <div class="col-md-2">
                                <h5><label asp-for="ClasificacionId" class="col-form-label"></label></h5>
                            </div>
                            <div class="col-md-8">
                                <select asp-for="ClasificacionId" class="form-control"
                                        asp-items="@Lista1" disabled></select>
                            </div>
                            <span asp-validation-for="ClasificacionId" class="text-danger"></span>
                        </div>
                        <div class="form-group row">

                            <div class="col-md-4 text-md-right">
                                <a asp-action="Index" type="button" style="color:white"
                                   class="btn btn-warning">
                                    Regresar
                                </a>
                            </div>

                        </div>
                    </div>
                </form>
            </div>
        </div>
    </div>
</main>

<script src="~/js/sweetalert2.js"></script>
<script src="~/js/Utilitarios.js"></script>
<script>
    function abrirModal() {
        verModal('Modificar', '¿Realmente Desea modificar el registro de residuos ordinarios?').then((result) => {
            if (result.value) {
                var viewEditar = document.getElementById("viewEditar");
                viewEditar.submit();
                Swal.fire(
                    'Modificado!',
                    'Operación con éxito!.',
                    'success'
                )
            }
            else if (result.dismiss === Swal.DismissReason.cancel) {
                Swal.fire(
                    'Cancelado',
                    'Operación Fracasada!!!:)',
                    'error'
                )
            }
        })
    }
</script>

